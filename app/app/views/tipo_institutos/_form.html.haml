- form_path = tipo_instituto.id.nil? ? tipo_institutos_path : tipo_instituto_path(tipo_instituto)
= form_with(url: form_path, model: tipo_instituto, local: true) do |form|
  - if tipo_instituto.errors.any?
    #error_explanation.alert.alert-danger{role: 'alert'}
      %h2
        Existen
        = tipo_instituto.errors.count
        = "error".pluralize(tipo_instituto.errors.count, :es)
      %ul
        - tipo_instituto.errors.full_messages.each do |message|
          %li= message

  .row
    .col.col-6.form-group
      = form.label :nombre
      = form.text_field :nombre, id: :tipo_instituto_nombre, class: 'form-control'
    .col.col-6.form-group
      = form.label :id_status, "Estado"
      = form.select :id_status, @statuses.collect{|status| [status.nombre, status.id]}, {}, {id: :tipo_instituto_id_status, class: 'form-control'}
    .col.col-12.form-group
      = form.label :descripcion, "Descripci&oacute;n".html_safe
      = form.text_area :descripcion, id: :tipo_instituto_descripcion, class: 'form-control'

  .row
    .col.actions
      = form.submit "Guardar", class: 'btn btn-primary pull-right'
