%p#notice= notice
%h1 Investigaciones
%table
  %thead
    %tr
      %th Id instituto
      %th Id microcuenca
      %th Id municipio
      %th Id documento
      %th Autor
      %th Titulo
      %th No paginas
      %th Fecha realizacion
      %th Fecha publicacion
      %th Resumen
      %th Palabras clave
      %th Recurso web
      %th Id status
      %th{:colspan => "3"}
  %tbody
    - @investigaciones.each do |investigacion|
      %tr
        %td= investigacion.id_instituto
        %td= investigacion.id_microcuenca
        %td= investigacion.id_municipio
        %td= investigacion.id_documento
        %td= investigacion.autor
        %td= investigacion.titulo
        %td= investigacion.no_paginas
        %td= investigacion.fecha_realizacion
        %td= investigacion.fecha_publicacion
        %td= investigacion.resumen
        %td= investigacion.palabras_clave
        %td= investigacion.recurso_web
        %td= investigacion.id_status
        %td= link_to 'Show', investigacion
        %td= link_to 'Edit', edit_investigacion_path(investigacion)
        %td= link_to 'Destroy', investigacion, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Investigacion', new_investigacion_path
