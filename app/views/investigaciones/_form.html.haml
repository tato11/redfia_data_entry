- form_path = investigacion.id.nil? ? investigacion_path : investigacion_path(investigacion)
= form_with(url: form_path, model: investigacion, local: true) do |form|
  - if investigacion.errors.any?
    #error_explanation.alert.alert-danger{role: 'alert'}
      %h2
        Existen
        investigacion.errors.count
        = "error".pluralize(investigacion.errors.count, :es)
      %ul
        - investigacion.errors.full_messages.each do |message|
          %li= message

  .row
    .col.col-4.form-group
      = form.label :id_instituto
      = form.number_field :id_instituto, id: :investigacion_id_instituto
    .col.col-4.form-group
      = form.label :id_microcuenca
      = form.number_field :id_microcuenca, id: :investigacion_id_microcuenca
    .col.col-4.form-group
      = form.label :id_municipio
      = form.number_field :id_municipio, id: :investigacion_id_municipio
    .col.col-4.form-group
      = form.label :id_documento
      = form.number_field :id_documento, id: :investigacion_id_documento
    .col.col-4.form-group
      = form.label :autor
      = form.text_field :autor, id: :investigacion_autor
    .col.col-4.form-group
      = form.label :titulo
      = form.text_field :titulo, id: :investigacion_titulo
    .col.col-4.form-group
      = form.label :no_paginas
      = form.number_field :no_paginas, id: :investigacion_no_paginas
    .col.col-4.form-group
      = form.label :fecha_realizacion
      = form.text_field :fecha_realizacion, id: :investigacion_fecha_realizacion
    .col.col-4.form-group
      = form.label :fecha_publicacion
      = form.text_field :fecha_publicacion, id: :investigacion_fecha_publicacion
    .col.col-4.form-group
      = form.label :resumen
      = form.text_area :resumen, id: :investigacion_resumen
    .col.col-4.form-group
      = form.label :palabras_clave
      = form.text_field :palabras_clave, id: :investigacion_palabras_clave
    .col.col-4.form-group
      = form.label :recurso_web
      = form.text_area :recurso_web, id: :investigacion_recurso_web
    .col.col-4.form-group
      = form.label :id_status, "Estado"
      = form.select :id_status, @statuses.collect{|status| [status.nombre, status.id]}, {}, {id: :investigacion_id_status, class: 'form-control'}
  .actions
      = form.submit "Guardar", class: 'btn btn-primary pull-right'
