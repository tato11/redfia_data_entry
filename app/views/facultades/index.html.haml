.container-fluid
  .row
    .col.col-8
      %h1 Facultades Institutos
    .col.col-4
      = link_to 'Nuevo Facultades Instituto', new_facultad_path, class:"btn btn-primary pull-right"

  .row
    .col
      %table.table.table-striped
        %thead
          %tr
            %th Institucion
            %th Nombre
            %th Siglas
            %th Telefono
            %th Extension
            %th Direccion
            %th Correo electronico
            %th Sitio web
            %th Estado
            %th{:colspan => "3"}
        %tbody
          - @facultades.each do |facultad|
            %tr
              %td= facultad.institucion.nombre
              %td= facultad.nombre
              %td= facultad.siglas
              %td= render 'shared/phone_beautify', phone: facultad.telefono
              %td= facultad.extension
              %td= facultad.direccion
              %td= render 'shared/email_beautify', item: facultad
              %td= render 'shared/website_beautify', item: facultad
              %td= render 'shared/status_beautify', status: facultad.status
              %td= link_to 'Mostrar', facultad_path(facultad)
              %td= link_to 'Editar', edit_facultad_path(facultad)
              %td= link_to 'Borrar', facultad_path(facultad), method: :delete, data: { confirm: 'Estas seguro?' }

  .row
    .col
      = paginate @facultades
