%p#notice= notice
%h1 Facultades Institutos
%table
  %thead
    %tr
      %th Id instituciones
      %th Nombre
      %th Siglas
      %th Telefono
      %th Extension
      %th Direccion
      %th Correo electronico
      %th Sitio web
      %th Id status
      %th{:colspan => "3"}
  %tbody
    - @facultades.each do |facultad|
      %tr
        %td= facultad.id_instituciones
        %td= facultad.nombre
        %td= facultad.siglas
        %td= facultad.telefono
        %td= facultad.extension
        %td= facultad.direccion
        %td= facultad.correo_electronico
        %td= facultad.sitio_web
        %td= facultad.id_status
        %td= link_to 'Show', facultad_path(facultad)
        %td= link_to 'Edit', edit_facultad_path(facultad)
        %td= link_to 'Desactivar', desctroy_facultad_path(facultad), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Facultades Instituto', new_facultad_path
