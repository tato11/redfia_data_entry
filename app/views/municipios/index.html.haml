.container-fluid
  .row
    .col.col-8
      %h1 Municipios
    .col.col-4
      = link_to 'Nuevo Municipio', new_municipio_path, class:"btn btn-primary pull-right"

  .row
    .col
      %table.table.table-striped
        %thead
          %tr
            %th Departamento
            %th Nombre
            %th Estado
            %th{:colspan => "3"}
        %tbody
          - @municipios.each do |municipio|
            %tr
              %td= municipio.departamento.nombre
              %td= municipio.nombre
              %td= render 'shared/status_beautify', status: municipio.status
              %td= link_to 'Mostrar', municipio
              %td= link_to 'Editar', edit_municipio_path(municipio)
              %td= link_to 'Borrar', municipio, method: :delete, data: { confirm: 'Estas seguro?' }

  .row
    .col
      = paginate @municipios
