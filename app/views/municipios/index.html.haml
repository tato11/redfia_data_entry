%p#notice= notice
%h1 Municipios
%table
  %thead
    %tr
      %th Id departamento
      %th Nombre
      %th Id status
      %th{:colspan => "3"}
  %tbody
    - @municipios.each do |municipio|
      %tr
        %td= municipio.id_departamento
        %td= municipio.nombre
        %td= municipio.id_status
        %td= link_to 'Show', municipio
        %td= link_to 'Edit', edit_municipio_path(municipio)
        %td= link_to 'Destroy', municipio, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Municipio', new_municipio_path
