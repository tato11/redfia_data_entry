.container-fluid
  .row
    .col.col-8
      %h1 Estados
    .col.col-4
      = link_to 'Nuevo Estado', new_status_path, class:"btn btn-primary pull-right"

  .row
    .col
      %table.table.table-striped
        %thead
          %tr
            %th Nombre
            %th Visible
            %th{:colspan => "3"}
        %tbody
          - @statuses.each do |status|
            %tr
              %td= status.nombre
              %td= render 'shared/flag_beautify', flag: status.visible
              %td= link_to 'Mostrar', status
              %td= link_to 'Editar', edit_status_path(status)
              %td= link_to 'Borrar', status, method: :delete, data: { confirm: 'Estas seguro?' }

  .row
    .col
      = paginate @statuses
