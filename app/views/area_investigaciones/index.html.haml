%p#notice= notice
%h1 Area Investigacions
%table
  %thead
    %tr
      %th Id investigacion
      %th Id area
      %th{:colspan => "3"}
  %tbody
    - @area_investigaciones.each do |area_investigacion|
      %tr
        %td= area_investigacion.id_investigacion
        %td= area_investigacion.id_area
        %td= link_to 'Mostrar', area_investigacion
        %td= link_to 'Editar', edit_area_investigacion_path(area_investigacion)
        %td= link_to 'Borrar', area_investigacion, method: :delete, data: { confirm: 'Estas seguro?' }
%br/
= link_to 'Nuevo Area Investigacion', new_area_investigacion_path
