%p#notice= notice
%h1 Departamentos
%table
  %thead
    %tr
      %th Nombre
      %th Id status
      %th{:colspan => "3"}
  %tbody
    - @departamentos.each do |departamento|
      %tr
        %td= departamento.nombre
        %td= departamento.id_status
        %td= link_to 'Show', departamento
        %td= link_to 'Edit', edit_departamento_path(departamento)
        %td= link_to 'Destroy', departamento, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Departamento', new_departamento_path
