.container-fluid
  .row
    .col.col-8
      %h1 Departamentos
    .col.col-4
      = link_to 'Nuevo Departamento', new_departamento_path, class:"btn btn-primary pull-right"

  .row
    .col
      %table.table.table-striped
        %thead
          %tr
            %th Nombre
            %th Estado
            %th{:colspan => "3"}
        %tbody
          - @departamentos.each do |departamento|
            %tr
              %td= departamento.nombre
              %td= render 'shared/status_beautify', status: departamento.status
              %td= link_to 'Mostrar', departamento
              %td= link_to 'Editar', edit_departamento_path(departamento)
              %td= link_to 'Borrar', departamento, method: :delete, data: { confirm: 'Estas seguro?' }

  .row
    .col
      = paginate @departamentos
