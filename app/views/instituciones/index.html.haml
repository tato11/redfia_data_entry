.container-fluid
  - if !notice.to_s.strip.empty?
    .row
      .col
        #notice.alert.alert-info{role: 'alert'}
          = notice

  .row
    .col.col-8
      %h1 Instituciones
    .col.col-4
      = link_to 'Nueva Institucion', new_institucion_path, class:"btn btn-primary pull-right"

  .row
    .col
      %table.table.table-striped
        %thead
          %tr
            %th Nombre
            %th Siglas
            %th Telefono
            %th Direccion
            %th Correo electronico
            %th Sitio web
            %th Estado
            %th{colspan:"3"}

        %tbody
          - @instituciones.each do |institucion|
            %tr
              %td= institucion.nombre
              %td= institucion.siglas
              %td= institucion.telefono
              %td= institucion.direccion
              %td
                - if institucion.correo_electronico_valid?
                  %a{href: "mailto:#{institucion.correo_electronico}"}
                    = institucion.correo_electronico
                - else
                  = institucion.correo_electronico
              %td
                - if institucion.sitio_web_valid?
                  %a{href: institucion.sitio_web}
                    = institucion.sitio_web
                - else
                  = institucion.sitio_web
              %td
                - if institucion.status.visible?
                  .text-success
                    = institucion.status.nombre
                - elsif institucion.status.deleted?
                  .text-danger.font-italic
                    = institucion.status.nombre
                - else
                  .text-secondary
                    = institucion.status.nombre
              %td= link_to 'Mostrar', institucion_path(institucion)
              %td= link_to 'Editar', edit_institucion_path(institucion)
              %td= link_to 'Borrar', institucion_path(institucion), method: :delete, data: { confirm: 'Estas seguro?' }
