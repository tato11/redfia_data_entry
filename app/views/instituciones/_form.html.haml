- form_path = institucion.id.nil? ? instituciones_path : institucion_path(institucion)
= form_with(url: form_path, model: institucion, local: true) do |form|
  - if institucion.errors.any?
    #error_explanation.alert.alert-danger{role: 'alert'}
      %h2
        = pluralize(institucion.errors.count, "error")
        prohibited this institucion from being saved:

      %ul
        - institucion.errors.full_messages.each do |message|
          %li= message

  .row
    .col.col-4.form-group
      = form.label :nombre
      = form.text_field :nombre, id: :institucion_nombre, class: 'form-control'

    .col.col-4.form-group
      = form.label :siglas
      = form.text_field :siglas, id: :institucion_siglas, class: 'form-control'

    .col.col-4.form-group
      = form.label :telefono
      = form.text_field :telefono, id: :institucion_telefono, class: 'form-control'

    .col.col-12.form-group
      = form.label :direccion
      = form.text_field :direccion, id: :institucion_direccion, class: 'form-control'

    .col.col-4.form-group
      = form.label :correo_electronico
      = form.text_field :correo_electronico, id: :institucion_correo_electronico, class: 'form-control'

    .col.col-4.form-group
      = form.label :sitio_web
      = form.text_field :sitio_web, id: :institucion_sitio_web, class: 'form-control'

    .col.col-4.form-group
      = form.label :id_status, "Estado"
      = form.select :id_status, @statuses.collect{|status| [status.nombre, status.id]}, {}, {id: :institucion_id_status, class: 'form-control'}


  .actions
    = form.submit "Guardar", class: 'btn btn-primary pull-right'
