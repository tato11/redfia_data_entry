
.container
  .form-sign-in
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .row
        .col
          %h1 Editar #{resource_name.to_s.humanize}

      - errors = devise_error_messages!
      - if !errors.blank?
        #error_explanation.alert.alert-danger{role: 'alert'}
          %h2
            Existen errores:

          = errors
      .row
        .col.col-12.form-group
          = f.email_field :email, class: 'form-control', autofocus: true, class: 'form-control', autocomplete: "email", placeholder: 'Correo electronico'
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          .col.col-12
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .col.col-12.form-group
          %i (leave blank if you don't want to change it)
          = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: raw('Contrase&ntilde;a')
        .col.col-12.form-group
          - if @minimum_password_length
            %em
              (Minimo #{@minimum_password_length} caracteres)
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: raw('Confirmar contrase&ntilde;a')
        .col.col-12.form-group
          %i (#{raw('Necesitamos su contrase&ntilde;a actual para confirmar los cambios')})
          = f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: raw('Contrase&ntilde;a actual')
      .row
        .col.actions
          = f.submit "Guardar", class: 'btn btn-primary pull-right'
    = link_to "Back", :back

