.container-fluid
  .row
    .col.col-8
      %h1 Cuencas
    .col.col-4
      = link_to 'Nueva Cuenca', new_cuenca_path, class:"btn btn-primary pull-right"

  .row
    .col
      %table.table.table-striped
        %thead
          %tr
            %th Vertiente
            %th Nombre
            %th Estado
            %th{:colspan => "3"}
        %tbody
          - @cuencas.each do |cuenca|
            %tr
              %td= cuenca.vertiente.nombre
              %td= cuenca.nombre
              %td= = render 'shared/status_beautify', status: cuenca.status
              %td= link_to 'Mostrar', cuenca
              %td= link_to 'Editar', edit_cuenca_path(cuenca)
              %td= link_to 'Borrar', cuenca, method: :delete, data: { confirm: 'Estas seguro?' }

  .row
    .col
      = paginate @cuencas
