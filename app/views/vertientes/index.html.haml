.container-fluid
  .row
    .col.col-8
      %h1 Vertientes
    .col.col-4
      = link_to 'Nuevo Vertiente', new_vertiente_path, class:"btn btn-primary pull-right"

  .row
    .col
      %table.table.table-striped
        %thead
          %tr
            %th Nombre
            %th Estado
            %th{:colspan => "3"}
        %tbody
          - @vertientes.each do |vertiente|
            %tr
              %td= vertiente.nombre
              %td= render 'shared/status_beautify', status: vertiente.status
              %td= link_to 'Mostrar', vertiente
              %td= link_to 'Editar', edit_vertiente_path(vertiente)
              %td= link_to 'Borrar', vertiente, method: :delete, data: { confirm: 'Estas seguro?' }

  .row
    .col
      = paginate @vertientes
