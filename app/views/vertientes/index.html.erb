<p id="notice"><%= notice %></p>

<h1>Vertientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Id status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vertientes.each do |vertiente| %>
      <tr>
        <td><%= vertiente.nombre %></td>
        <td><%= vertiente.id_status %></td>
        <td><%= link_to 'Show', vertiente %></td>
        <td><%= link_to 'Edit', edit_vertiente_path(vertiente) %></td>
        <td><%= link_to 'Destroy', vertiente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

