.container
  .row
    .col.col-9
      %h1= @vertiente.nombre
    .col.col-3
      = link_to 'Editar', edit_vertiente_path(@vertiente), class: 'btn btn-outline-primary pull-right'
      = link_to 'Volver', vertientes_path, class: 'btn btn-outline-link pull-right'
  .row
    .col.col-4.font-weight-bold
      Nombre:
    .col.col-8
      = @vertiente.nombre
  .row
    .col.col-4.font-weight-bold
      Estado
    .col.col-8
      = render 'shared/status_beautify', status: @vertiente.status
