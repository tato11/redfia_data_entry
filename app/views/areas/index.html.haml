.container-fluid
  .row
    .col.col-8
      %h1 Areas
    .col.col-4
      = link_to 'Nueva Area', new_area_path, class:"btn btn-primary pull-right"

  .row
    .col
      %table.table.table-striped
        %thead
          %tr
            %th Nombre
            %th Descripcion
            %th Estado
            %th{:colspan => "3"}
        %tbody
          - @areas.each do |area|
            %tr
              %td= area.nombre
              %td= area.descripcion
              %td= render 'shared/status_beautify', status: area.status
              %td= link_to 'Mostrar', area
              %td= link_to 'Editar', edit_area_path(area)
              %td= link_to 'Borrar', area, method: :delete, data: { confirm: 'Estas seguro?' }

  .row
    .col
      = paginate @areas
