- collection ||= []
- param_name ||= :page
- hide_pagination ||= false
.row
  .col
    %table.table.table-striped
      %thead
        %tr
          %th Nombre
          %th Descripcion
          %th Estado
          %th{:colspan => "3"}
      %tbody
        - collection.each do |area|
          %tr
            %td= area.nombre
            %td= area.descripcion
            %td= render 'shared/status_beautify', status: area.status
            %td= link_to 'Mostrar', area
            %td= link_to 'Editar', edit_area_path(area)
            %td= link_to 'Borrar', area, method: :delete, data: { confirm: 'Estas seguro?' }

- if !hide_pagination
  .row
    .col
      = paginate collection, param_name: param_name
